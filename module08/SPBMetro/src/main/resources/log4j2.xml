<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>

        <File name="StationRequest" fileName="logs/station_requests.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="NotFoundRequest" fileName="logs/station_not_found.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="Errors" fileName="logs/errors.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

    </appenders>

    <loggers>
        <root level="debug">
            <appender-ref ref="Errors" level="error"/>
        </root>

        <Logger name="NotFoundRequest" level="info">
            <appender-ref ref="NotFoundRequest" level="info"/>
        </Logger>

        <Logger name="StationRequest" level="info">
            <appender-ref ref="StationRequest" level="info"/>
        </Logger>
    </loggers>
</configuration>